{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    <div class="col-md-7">
      <p>
        {{post.content}}
      </p>
    </div>
    <p>Written by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}

